<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>
    

	<package name="default" extends="json-default" namespace="/">
	
	 <default-action-ref name="index"/>
	 
	 <action name="index">
        	<result>/index.jsp</result>
	    </action>
	 

        <action name="registeruser" class="org.twitter.action.RegisterAction" method = "crearUsuario">
        	<result name="success">/twitter.jsp</result>
        	<result name="error" >/index.jsp</result>
        </action>
        
		<action name="loginuser" class="org.twitter.action.LoginAction">
            <result name="success">/twitter.jsp</result>
            <result name="error" >/index.jsp</result>

        </action>
        
        <action name="registercomment" class="org.twitter.action.CommentAction" >
			<result name="REGISTER" type="json"></result>
		</action>
		<action name="report" class="org.twitter.action.ReportAction">
			<result name="REPORT" type="json"></result>
		</action>
	
		<action name="updatecomment" class="org.twitter.action.UpdateAction">
			<result name="UPDATE" type="json"></result>
		</action>
		
		<action name="deletetweet" class="org.twitter.action.DeleteAction">
			<result name="DELETE" type="json"></result>
		</action>
		
		<action name="goto_twitter">
        	<result>/twitter.jsp</result>
	    </action>
	    
	    <action name="goto_login">
        	<result>/login.jsp</result>
	    </action>
		
	</package>
</struts>